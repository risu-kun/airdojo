<main class="site-content mountain-background">

	<div class="frosty col-xs-10 col-xs-offset-1">
		<h1 class="text-center">Learn something today.</h1>

		<hr />

		<% @courses.each do |course| %>
			<h2 class="text-center"><%= link_to course.title, course_path(course) %></h2>
			<br />
			<div class="col-xs-12 col-sm-8">
				<%= course.description %>
			</div>
			<div class="col-xs-12 col-sm-4 text-center">
				<%= link_to 'See Details', course_path(course) , class: 'btn btn-primary btn-large' %>
			</div>
			<br class="clr" />
		<% end %>

	</div>


</main>