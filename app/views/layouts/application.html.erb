<!DOCTYPE html>
<html>
	<head>
	  <title>AirDojo</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	  <link href="http://vjs.zencdn.net/5.8.0/video-js.css" rel="stylesheet">
	  <script src="http://vjs.zencdn.net/5.8.0/video.js"></script>
	  <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
	</head>
	<body class="site">
		<!-- navbar -->
		<nav class="navbar navbar-default">
		  <div class="container-fluid">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <%= link_to 'AirDojo', root_path, class: 'navbar-brand' %>
		    </div>

		    <!-- Collect the nav links, forms, and other content for toggling -->
		    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		      <ul class="nav navbar-nav">
		        <li><%= link_to 'See all courses', courses_path %></li>
		      </ul>
		      <ul class="nav navbar-nav navbar-right">
		      	<% if user_signed_in? %>
		      		<li><%= link_to 'My Dashboard', dashboard_path %></li>
		      		<li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
		      	<% else %>
			        <li><%= link_to 'Log in', new_user_session_path %></li>
			        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
			      <% end %>
		      </ul>
		    </div><!-- /.navbar-collapse -->
		  </div><!-- /.container-fluid -->
		</nav>
		<!-- end navbar -->
			<!-- devise alert/notice -->
			<% if notice.present? %>
				<p class="alert alert-info"><%= notice %></p>
			<% end %>
			<% if alert.present? %>
				<p class="alert alert-danger"><%= alert %></p>
			<% end %>
			<!-- end devise alert/notice -->

			<%= yield %>
		
		<footer>
			<div class="col-xs-12 col-sm-3 text-center">
				<b>Teachers</b>
				<br />
      	<%= link_to 'Teach a Course', new_instructor_course_path %>
      	<br />
      	<%= link_to 'My Dashboard', dashboard_path %>
      </div>
      <div class="col-xs-12 col-sm-3 text-center">
				<b>About</b>
				<br />
        <%= link_to 'Team', '#' %>
        <br />
        <%= link_to 'Careers', '#' %>
        <br />
        <%= link_to 'Privacy Policy', '#' %>
      </div>
      <div class="col-xs-12 col-sm-3 text-center">
				<b>Contact</b>
				<br />
        risse.rigdon@gmail.com
        <br />
        4 Privet Dr
        <br />
        Surrey, England
      </div>
      <div class="col-xs-12 col-sm-3 social text-center">
				<b>Social</b>
				<br />
				<br />
				<%= link_to 'http://github.com/risu-kun' do %>
					<%= image_tag 'github.png', class: 'social-button' %>
				<% end %>
				<%= link_to 'http://twitter.com/risuikari' do %>
        	<%= image_tag 'twitter.png', class: 'social-button' %>
        <% end %>
      </div>
		</footer>

	</body>
</html>
