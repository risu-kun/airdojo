<script>
  $(function() {
    $('.lessons').sortable({
    	update: function( event, ui ) {
    		$.ajax({
    			type: 'PUT',
    			url: ui.item.data('update-url'),
    			dataType: 'json',
    			data: { lesson: { row_order_position: ui.item.index() } }
    		});
    	}
    });
    $('.sections').sortable({
    	update: function( event, ui ) {
    		$.ajax({
    			type: 'PUT',
    			url: ui.item.data('update-url'),
    			dataType: 'json',
    			data: { section: { row_order_position: ui.item.index() } }
    		});
    	}
    });
  });
</script>

<main class="site-content course-detail-page-wrapper col-xs-10 col-xs-offset-1">

	<h1><%= current_course.title %></h1>
	<%= image_tag current_course.image, class: 'img-responsive' %>
	<hr />	

	<div class="text-center">
		<%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-lg' %>
	</div>

	<br />

	<h2>Sections</h2>
	<ul class="sections">
		<% current_course.sections.rank(:row_order).each do |section| %>
			<li data-update-url=<%= instructor_section_path(section) %>>
				<div class="header">
					<span class="glyphicon glyphicon-move"></span>
					<%= section.title %>
					<%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'btn btn-primary btn-xs pull-right' %>
				</div>				
				<ul class="lessons">
					<% section.lessons.rank(:row_order).each do |lesson| %>
						<li data-update-url=<%= instructor_lesson_path(lesson) %>>
							<div class="col-xs-1">
								<br />
								<span class="glyphicon glyphicon-move"></span>
							</div>
							<div class="col-xs-11">
								<p>
									<b><%= lesson.title %></b>
								</p>
								<p>
									<%= lesson.subtitle %>
								</p>
							</div>
							<br class="clr" />
						</li>			
					<% end %>
				</ul>
				<br class="clr" />
			</li>
		<% end %>
	</ul>
</main>