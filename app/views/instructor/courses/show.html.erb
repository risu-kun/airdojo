<main class="site-content course-detail-page-wrapper col-xs-10 col-xs-offset-1">

  <br />
  <br />

	<h1><%= @course.title %></h1>
	<hr />	

	<div class="text-center">
		<%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-lg' %>
	</div>

	<br />

	<h2>Sections</h2>
	<ul>
		<% @course.sections.each do |section| %>
			<li>
				<%= section.title %>
				<%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'btn btn-primary btn-sm pull-right' %>
				<ul>
					<% section.lessons.each do |lesson| %>
						<li>
							<b><%= lesson.title %></b>
							-
							<%= lesson.subtitle %>
						</li>
					<% end %>
				</ul>
				<br class='clr' />
			</li>
		<% end %>
	</ul>
</main>