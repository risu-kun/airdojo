<main class="site-content course-detail-page-wrapper col-xs-10 col-xs-offset-1">

  <br />
  <br />

	<h1>Add a new lesson</h1>
	<hr />

	<%= simple_form_for @lesson, url: instructor_section_lessons_path(current_section) do |f| %>
		<%= f.input :title %>
		<%= f.input :subtitle %>
		<%= f.input :video %>
		<br />
		<%= f.submit "Create lesson", class: 'btn btn-primary pull-right' %>
	<% end %>

</main>